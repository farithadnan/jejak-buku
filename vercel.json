{
  "buildCommand": "if [ -d \"frontend\" ]; then cd frontend; fi && npm ci --legacy-peer-deps && npm run build",
  "outputDirectory": "frontend/dist/frontend",
  "installCommand": "echo 'Skipping root install'",
  "ignoreCommand": "bash -c 'exit 1'",
  "framework": null,
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "git": {
    "deploymentEnabled": {
      "demo": true,
      "development": false,
      "master": false
    }
  }
}
